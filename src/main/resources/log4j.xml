<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'
                     debug="true">

    <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %p [%c] %m%n"/>
        </layout>
    </appender>
    <appender name="ServerDailyRollingFile" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <param name="File" value="financial.log"/>
        <param name="Append" value="true"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d - %m%n"/>
        </layout>
    </appender>
    <root>
        <level value="info"/>
        <appender-ref ref="ServerDailyRollingFile"/>
        <appender-ref ref="stdout"/>
    </root>
    <logger name="com.huotu.financial">
        <level value="${log4j.com.huotu.financial}"/>
    </logger>
    <logger name="org.springframework.security">
        <level value="${log4j.org.springframework.security}"/>
    </logger>
    <logger name="org.springframework.transaction">
        <level value="${log4j.org.springframework.transaction}"/>
    </logger>
    <logger name="org.springframework.data">
        <level value="${log4j.org.springframework.data}"/>
    </logger>
    <logger name="org.springframework.web">
        <level value="${log4j.org.springframework.web}"/>
    </logger>


</log4j:configuration>