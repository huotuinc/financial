<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" profile="development"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="entityManagerFactory" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="packagesToScan">
            <array>
                <value>com.huotu.financial.entity</value>
                <value>com.huotu.huobanplus.model.entity</value>
                <value>com.huotu.huobanplus.common.entity</value>
                <value>com.huotu.huobanplus.base.entity</value>
            </array>
        </property>
        <property name="persistenceProvider">
            <bean class="org.eclipse.persistence.jpa.PersistenceProvider"/>
        </property>
        <property name="jpaDialect">
            <bean class="org.springframework.orm.jpa.vendor.EclipseLinkJpaDialect"/>
        </property>

        <property name="jpaPropertyMap">
            <map>
                <entry key="javax.persistence.jdbc.url" value="jdbc:jtds:sqlserver://192.168.1.146:1433/Dev_HotPdMall"/>
                <entry key="javax.persistence.jdbc.user" value="hotdev"/>
                <entry key="javax.persistence.jdbc.password" value="hot@1234" />
                <entry key="javax.persistence.jdbc.driver" value="net.sourceforge.jtds.jdbc.Driver" />

                <entry key="javax.persistence.schema-generation.database.action" value="create"/>
                <entry key="eclipselink.weaving" value="false"/>
                <entry key="eclipselink.logging.level" value="FINE"/>
            </map>
        </property>
    </bean>
</beans>